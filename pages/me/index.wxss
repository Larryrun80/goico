/* pages/me/index.wxss */
page {
  background-color: #eee;
}

.me-container {
  display: flex;
  flex-direction: column;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-image: url('https://ico.iknowapp.com/to_the_moon_bg.jpg'); 
  background-size: 100% 100%;
  background-repeat: no-repeat; 
  height: 272rpx;
  background-color: #000;
}

.user-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.username {
  color: #fff;
  font-size: 28rpx;
}

.message {
  text-align: center;
  color: #aaa;
  font-style: italic;
  font-size: 24rpx;
  margin: 40rpx 50rpx 20rpx 50rpx;
  line-height: 40rpx;
}

.trend-switch {
  margin-right: -10rpx;
}

.cell {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 30rpx;
  height: 100rpx;
  background-color: #fff;
  line-height: 100rpx;
}

.left-cell {
  font-size: 32rpx;
  color: #000;
}

.right-cell {
  font-size: 32rpx;
  color: #666;
}

.picker-view {
  width: 500rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.picker {
  width: 500rpx;
  text-align: right;
  color: #666;
  font-size: 32rpx;
}

.v-sep {
  height: 40rpx;
  line-height: 40rpx;
}

.item-line {
  height: 1rpx;
  margin: 0 30rpx;
  background: #E5E5E5;
}

.detail {
  width: 16rpx;
  height: 26rpx;
  margin-left: 20rpx;
}

#service-btn {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  height: 100%;
  align-items: flex-end;
  border-width: 0;
}

.service-img {
  width: 80rpx;
  height: 80rpx;
  margin-top: 10rpx;
  border-radius: 50%;
}