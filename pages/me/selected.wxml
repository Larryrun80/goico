<!--pages/me/selected.wxml-->
<view class="container">
  <form>
    <view class="filter">
      <icon type="search" class="search-img" size="15" color="#405f80"></icon>
      <input value="{{keyword}}" class="search-input" type="text" confirm-type="search" bindconfirm='search' placeholder="输入币名添加自选" placeholder-class="placeholder" bindinput="onBindInput" bindfocus="onBindFocus" />
      <button id="cancel-btn" wx:if="{{searchPanelShow}}" plain="true" formType="reset" bindtap="onCancelImgTap"><image src="/images/close_btn.png" class="xx-img" ></image></button>
    </view>
  </form>
  <view class="currencies">
    <view wx:for="{{currenciesToShow}}" wx:for-item="item" wx:key="id" class="currencies-item">
      <view class="item-info">
        <view class="item-left" data-symbol="{{item.symbol}}" data-currency="{{item.currency}}" data-cid="{{item.currency_id}}" data-cid="{{item.currency_id}}">{{item.currency}}</view>
        <view class="item-right">
          <image wx:if="{{item.symbolSelected && item.seq>0}}" class='stick' data-seq="{{item.seq}}" src="/images/stick.png" bindtap="upSymbol"></image>
          <!-- <image wx:else class='stick' data-seq="{{item.seq}}" data-symbol="{{item.symbol}}" src="/images/stick_disable.png" bindtap="stickDisabled"></image> -->
          <view class="item-star" data-symbol="{{item.symbol}}" data-seq="{{item.seq}}" data-name="{{item.name}}" data-cid="{{item.currency_id}}" bindtap="selectCurrency">
            <image class="star" wx:if="{{item.symbolSelected}}" src="/images/star.png"></image>
            <image class="star" wx:else src="/images/unstar.png"></image>
          </view>
        </view>
      </view>
      <view class="item-line"></view>
    </view>
  </view>
</view>
