/* pages/eos/index.wxss */
page {
  background-color: #1c1d21;
}

.page1 {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.eos-logo {
  width: 64px;
  height: 118px;
  margin-top: 20px;
}

.eos-title {
  text-align: center;
  line-height: 150%;
  margin-top: 20px;
  color: #888;
  font-size: 26rpx;
}

.eos-text-large {
  margin-top: 6px;
  color: #fff;
  font-size: 80rpx;
  font-weight: bold;
}

.eos-text-normal {
  margin-top: 1px;
  color: #fff;
  font-size: 26rpx;
  font-weight: bolder;
}

.eos-text {
  margin-top: 4px;
  color: #fff;
  font-size: 40rpx;
  font-weight: bolder;
}

.eos-text-black {
  margin-top: 4px;
  color: #000;
  font-size: 40rpx;
  font-weight: bold;
}

.eos-text-black-normal {
  margin-top: 1px;
  color: #000;
  font-size: 26rpx;
  font-weight: bolder;
}

.eos-marketcap {
  margin-top: 40px;
  color: #fff;
  font-size: 26 rpx;
  border-width: 1px;
  border-style: solid;
  border-color: white;
  padding: 20rpx 50rpx;
  border-radius: 6rpx;
}

.page2 {
  margin-top: 40px; 
  height: 100%;
  width: 100%;
  background-color: #eee;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.canvas {
  width: 100%;
  height: 200px;
  margin-top: 30px;
  z-index: 1;
}

.placeholder {
  height: 30px;
}

.page3 {
  display: flex;
  flex-direction: column;
  align-items: center;
}

#logs-img {
  margin-top: 6px;
  width: 290px;
  height: 22px;
}

#qr-img {
  margin-top: 6px;
  width: 188px;
  height: 243px;
}

#share-btn {
  float: right;
  position: fixed;
  width: 122rpx;
  height: 122rpx;
  top: 10rpx;
  right: 10rpx;
  padding: 0;
  border-width: 0;
}

.share-img {
  width: 122rpx;
  height: 122rpx;
  margin-top: 0;
  border: none;
}

.float-share {
  z-index: 10;
}