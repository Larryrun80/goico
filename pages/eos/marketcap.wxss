#share-btn {
  width: 140rpx;
  height: 60rpx;
  border-width: 0;
  align-items: center
}

.share-img {
  width: 48rpx;
  height: 48rpx;
  border: none;
}

#cancel-btn {
  width: 60rpx;
  height: 80rpx;
  border-width: 0;
  align-items: center;
  margin-right: 20rpx;
}

