.coin-item {
  display: flex;
  flex-direction: column;
}

.coin-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 160rpx;
  padding: 0 30rpx;
}

.item-left {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item-right {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item-rank {
  font-size: 26rpx;
  color: #000;
  font-weight: bold;
  line-height: 37rpx;
}

.item-name {
  font-size: 40rpx;
  color: #000;
  font-weight: bold;
  margin-top: 2rpx;
  line-height: 56rpx;
}

.item-cap {
  font-size: 26rpx;
  color: #888;
  margin-top: 2rpx;
  line-height: 37rpx;
}

.item-price {
  font-size: 40rpx;
  color: #000;
}

.item-trend-increase {
  font-size: 26rpx;
  color: #FFF;
  background: #1AAD19;
  width: 140rpx;
  height: 60rpx;
  text-align: center; 
  line-height: 60rpx;
  border-radius: 6rpx;
  margin-left: 20rpx;
}

.item-trend-decrease {
  font-size: 26rpx;
  color: #FFF;
  background: #D0021B;
  width: 140rpx;
  height: 60rpx;
  text-align: center; 
  line-height: 60rpx;
  border-radius: 6rpx;
  margin-left: 20rpx;
}

.item-line {
  height: 1rpx;
  margin: 0 30rpx;
  background: #E5E5E5;
}
