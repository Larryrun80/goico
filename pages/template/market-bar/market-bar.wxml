<template name="marketBar">
  <scroll-view class="market-scroll-view" scroll-x>
    <view wx:for="{{markets}}" wx:for-item="market" class="market-item">
      <view style="color: {{market.color}}" data-market="{{market.name}}" bindtap="loadMarket"> {{market.showname}} </view>
    </view>
  </scroll-view>
</template>