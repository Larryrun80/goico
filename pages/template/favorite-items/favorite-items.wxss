.favorite-item {
  display: flex;
  flex-direction: column;
}

.fav-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 0 30rpx;
  height: 120rpx;
}

.fav-left {
  display: flex;
  flex-direction: column;
  width: 80%;
  margin-top: auto;
  margin-bottom: auto;
}

.fav-name {
  font-size: 26rpx;
  color: #888;
  line-height: 37rpx;
}

.fav-symbol {
  font-size: 40rpx;
  color: #000;
  line-height: 60rpx;
}

.fav-star {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.star {
  width: 64rpx;
  height: 64rpx;
}

.item-line {
  height: 1rpx;
  margin: 0 30rpx;
  background: #E5E5E5;
}