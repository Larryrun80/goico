/* pages/market/marketcap.wxss */
@import "../template/coin-items/coin-items.wxss";

.split-line {
  width: 2rpx;
  height: 50rpx;
  background: #e5e5e5;
  margin: auto;
  margin-right: 10rpx;
}

.sort-container {
  display: flex;
  flex-direction: row;
  margin: 0;
}

.rate-sort-container {
  display: flex;
  flex-direction: row;
}

.sort-label {
  margin: 0 5rpx 0 30rpx;
  font-size: 26rpx;
  color: #000;
  line-height: 80rpx;
}

.sort-img-view {
  display: flex;
  flex-direction: row;
  align-items: center;
}

 .search-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
} 

.search-img {
  margin: auto auto;
}

.toolkit {
  background-color: #f1f1f1;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  width: 100%;
  /* position: fixed;
  top: 0;
  padding: 0; 
  z-index: 100; */
}

.placeholder-view {
  height: 80rpx;
  background-color: #F9F9F9;
}

.switch-line {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%
}

.left-tool {
  width: 100%;
  display: flex;
  flex-direction: row;  
  align-items: center;
  margin-left: 15rpx;
}

.right-tool {
  width: 20%;
  display: flex;
  flex-direction: row;  
  align-items: center;
}

.tool-label {
  margin-left: 50rpx;
  font-size: 26rpx;
  color: #000;
  line-height: 80rpx;
}

#sort-img {
  width: 16rpx;
  height: 25rpx;
  margin-left: 10rpx;
}

.veritcal-seperate {
  width: 2rpx;
  height: 60rpx;
  background: #e5e5e5;
  margin-left: 10rpx;
}

.placeholder {
  font-size: 28rpx;
  color: #d1d1d1;
}

.search-input {
  width: 95%;
  margin-left: 20rpx;
  color: #000;
  font-size: 28rpx;
}

#share-btn {
  width: 50rpx;
  border-width: 0;
  align-items: center;  
  margin-right: 30rpx;
  padding: 25rpx 0 0 0;
}

.share-img {
  width: 48rpx;
  height: 48rpx;
  border: none;
  margin: auto;
}

#cancel-btn {
  width: 80rpx;
  border-width: 0;
  align-items: center;
  padding-top: 10rpx;
  padding-left: 25rpx;
  margin-right: 30rpx;
}

.xx-img{
    height: 30rpx;
    width: 30rpx;
    margin: auto;
}

.add-select-btn {
  margin: 10rpx 30rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  font-size: 26rpx;
  color: #d1d1d1;
}

.detail {
  width: 16rpx;
  height: 26rpx;
  margin-left: 10rpx;
}

.add-selected-bottom {
  height: 20rpx;
}


.dropdown-img {
  width: 18rpx;
  height: 12rpx;
}

.notification {
  width: 100%;
  height: 80rpx;
  background-color: #ffff99;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.notification-txt {
  font-size: 26rpx;
  color: #999;
  line-height: 80rpx;
  margin: auto;
}