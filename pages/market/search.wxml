<!--pages/market/search.wxml-->
<import src="../template/market-bar/market-bar.wxml" />

<view class="container">
  <form>
    <view class="filter">
      <view class="filter-set">
        <icon type="search" class="search-img" size="15" color="#405f80"></icon>
        <input value="{{keyword}}" class="search-input" type="text" confirm-type="search" bindconfirm='search' placeholder="输入币名添加自选" placeholder-class="placeholder" bindinput="onBindInput" bindfocus="onBindFocus" />
        <button id="cancel-btn" wx:if="{{searchPanelShow}}" plain="true" formType="reset" bindtap="onCancelImgTap">
          <image src="/images/buttons/close_btn.png" class="xx-img" ></image>
        </button>
      </view>
      <view id="search-btn">搜索</view>
    </view>
  </form>

  <view class="market-scv">
    <template is="marketBar" data="{{markets}}"></template>
  </view>
  <view class="item-line"></view>
</view>